    \definefontsynonym [MgOpenCosmetica-Bold]       [name:mgopencosmeticabold]        [features=default]
    \definefontsynonym [MgOpenCosmetica-BoldItalic] [name:mgopencosmeticaboldoblique] [features=default]
\stoptypescript

% Moderna

