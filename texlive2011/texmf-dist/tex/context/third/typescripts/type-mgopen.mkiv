% Canonica

\starttypescript [serif] [mgopen-canonica]
    \definefontsynonym [MgOpenCanonica-Regular]    [name:mgopencanonica]           [features=default]
    \definefontsynonym [MgOpenCanonica-Italic]     [name:mgopencanonicaitalic]     [features=default]
    \definefontsynonym [MgOpenCanonica-Bold]       [name:mgopencanonicabold]       [features=default]
    \definefontsynonym [MgOpenCanonica-BoldItalic] [name:mgopencanonicabolditalic] [features=default]
\stoptypescript

% Cosmetica

\starttypescript [sans] [mgopen-cosmetica]
