\useletterstyle[default]

\setuplettersection
  [\v!head,\v!date,\v!reference,\v!specialnotation,\v!address]
  [\c!alternative=\v!blockstyle]

\setupletteroptions
  [\c!marking=\v!no]

\setupletterelements
  [\v!layer]
  [\v!lettermain,
   \v!letternext,
   \v!nexthead,
   \v!lefthead,
   \v!righthead,
   \v!foot,
   \v!nextfoot,
   \v!topmark,
   \v!botmark,
   \v!cutmark]

\setupletterelements
  [\v!section]
  [\v!head,
   \v!date,
   \v!reference,
   \v!specialnotation,
   \v!address,
   \v!title,
   \v!opening,
   \v!subject,
   \v!content,
   \v!closing,
   \v!appendices]

\endinput
