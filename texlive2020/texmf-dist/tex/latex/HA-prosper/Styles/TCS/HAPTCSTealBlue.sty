      {\Acrobatmenu{\HAP@NSNav}{\TCSstar}}%
    }%
  % Main gradient
  \ifisDraft
  \else
  \psframe[linestyle=none, fillstyle=gradient,%1.37
     gradbegin=black,gradend=TCStealblue,gradmidpoint=0](-2.1,-1.5)(12.5,9)
  \fi
