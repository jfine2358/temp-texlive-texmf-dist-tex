			\pgfpathlineto{\pgfpoint{0.65cm}{0cm}}

			\pgfusepath{stroke}
			\pgfsetdash{}{0pt} 

			\pgfusepath{draw}

			%Kasten
			\pgfsetlinewidth{2\pgflinewidth}
			\pgfpathrectanglecorners{\pgfpoint{1cm}{0.5cm}%
                                    }{\pgfpoint{-1cm}{-0.5cm}}
			
			\pgfusepath{draw}

			\pgftext[base,y=-0.4cm]{RK}
	  }
}

