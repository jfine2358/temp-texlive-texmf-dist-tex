			\pgfpathlineto{\pgfpoint{0.7cm}{-0.3cm}}
			\pgfpathlineto{\pgfpoint{0.6cm}{-0.3cm}}

			\pgfusepath{stroke}

			\pgfsetdash{{2pt}{2pt}}{1pt} 
