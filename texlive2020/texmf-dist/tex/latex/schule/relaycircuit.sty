			\pgfpathlineto{\pgfpoint{-0.7cm}{-0.6cm}}
			\pgfpathmoveto{\pgfpoint{-0.8cm}{-0.6cm}}
			\pgfpathlineto{\pgfpoint{-0.6cm}{-0.6cm}}

