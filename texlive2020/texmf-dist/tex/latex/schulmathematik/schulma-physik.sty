\NewDocumentCommand \Massstab {m m m m}
  {
    \ensuremath
      {
        \SI {#1} {#2}
        \; \widehat {=} \;
        \SI {#3} {#4}
      }
  }

\NewDocumentCommand \tSI {m m}
  {
    \ensuremath
      {  
        \group_begin:
        \textstyle
        \SI [ per-mode = fraction ] {#1} {#2}
        \group_end:
      }
  }

\NewDocumentCommand \tsi {m}
  {
    \ensuremath
      {  
        \group_begin:
        \textstyle
        \si [ per-mode = fraction ] {#1}
        \group_end:
      }
  }

\NewDocumentCommand \Beschl {m}
  {
    \tSI{#1}{\m\per\square\s}
