\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{kurdishlipsum}[2018/04/21 v1.1 A package similar to the lipsum and ptext
packages for the Kurdish language with more than 100 paragraphs of the Diwany Vafaiy, Ahmedy Xani, Naly, Mahwy,...]
\RequirePackage{biditools}
\newcounter{kurd@count}
\setcounter{kurd@count}{0}

\def\kurd@par{\par}%

\DeclareOption{nopar}{\let\kurd@par\relax}
\ProcessOptions

\bidi@newrobustcmd\kurd@default{1-7}
\bidi@newrobustcmd\setkurdishlipsumdefault[1]{%
  \bidi@renewrobustcmd{\kurd@default}{#1}}

\bidi@newrobustcmd\kurd@dokurdishlipsum{%
  \ifnum\value{kurd@count}<\kurd@max\relax%
    \addtocounter{kurd@count}{1}%
    \csname kurdishlipsum@\roman{kurd@count}\endcsname%
    \kurd@dokurdishlipsum%
  \fi
}

\bidi@newrobustcmd\kurdishlipsum{%
  \@ifstar\@@kurdishlipsum\@kurdishlipsum
}

\bidi@newrobustcmd\ChangeKurdishlipsumPar{%
  \ifx\kurd@par\relax
    \def\kurd@par{\par}%
  \else
    \let\kurd@par\relax
  \fi
}

\bidi@newrobustcmd\@@kurdishlipsum[1][\kurd@default]{%
  \begingroup
    \ChangeKurdishlipsumPar
    \@kurdishlipsum[#1]
  \endgroup
}
\bidi@newrobustcmd\@kurdishlipsum[1][\kurd@default]{%
  \expandafter\kurd@minmax\expandafter{#1}%
  \setcounter{kurd@count}{\kurd@min}%
  \addtocounter{kurd@count}{-1}%
  \kurd@dokurdishlipsum%
}

\def\kurd@get#1-#2;{\def\kurd@min{#1}\def\kurd@max{#2}}
\def\kurd@stripmax#1-{\edef\kurd@max{#1}}
\def\kurd@minmax#1{%
  \kurd@get#1-\relax;%
  \edef\kurd@tmpa{\kurd@max}%
  \edef\kurd@relax{\relax}%
  \ifx\kurd@tmpa\kurd@relax\edef\kurd@max{\kurd@min}%
  \else\expandafter\kurd@stripmax\kurd@max\fi%
}

