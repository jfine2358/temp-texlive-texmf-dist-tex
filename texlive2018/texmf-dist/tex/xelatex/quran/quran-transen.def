\bidi@newrobustcmd\qt@doen{%
    \addtocounter{qt@count}{1}%
    \loop%
        \csname qurantrans@en@\roman{qt@count}\endcsname%
        \ifnum\value{qt@count}<\qt@max\relax%
        { }% an extra space between verses
        \qt@par%
        \addtocounter{qt@count}{1}%
    \repeat%
}%
