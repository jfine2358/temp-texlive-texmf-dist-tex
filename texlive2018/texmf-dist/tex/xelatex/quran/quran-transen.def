\def\basmalahen{In the name of Allah, most benevolent, ever-merciful. \qt@par}
\bidi@newrobustcmd\ToggleBasmalahen{%
  \ifx\basmalahen\relax%
    \def\basmalahen{In the name of Allah, most benevolent, ever-merciful. \qt@par}
  \else%
    \let\basmalahen\relax%
  \fi%
}%
