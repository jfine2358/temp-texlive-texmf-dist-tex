\bidi@newrobustcmd\qurantrans@fa@mmmmxxi{%
در آنجا تكيه مى‌زنند [و] ميوه‌هاى فراوان و نوشيدنى در آنجا طلب مى‌كنند.\qt@no{(51)}}
\bidi@newrobustcmd\qurantrans@fa@mmmmxxii{%
