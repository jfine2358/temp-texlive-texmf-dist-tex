\newcommand{\BicigToday}{%
	\number\year\space un-u\space\ifcase\month%
	\or nigeduger%			January
	\or xuyadugar%			February
	\or gurbadugar%			March
	\or duirbeduger%		April
	\or tabdugar%			May
	\or zirugadugar%		June
	\or duludugar%			July
	\or naimdugar%			August
	\or isuduger%			September
	\or arbadugar%			Oktober
	\or arban nigeduger%		November
	\or arban xuyadugar\fi%		December
	\space sar=a-yin\space\number\day}
