\bidi@newrobustcmd\qt@dode{%
    \addtocounter{qt@count}{1}%
    \loop%
        \csname qurantrans@de@\roman{qt@count}\endcsname%
        \ifnum\value{qt@count}<\qt@max\relax%
        { }% an extra space between verses
        \qt@par%
        \addtocounter{qt@count}{1}%
    \repeat%
}%
