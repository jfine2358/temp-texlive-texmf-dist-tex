\starttypescriptcollection [goudysans]

\starttypescript [\s!serif] [junicode]
    \definefontsynonym [Junicode-Regular]    [\s!file:Junicode-Regular]    [\s!features=\s!default]
    \definefontsynonym [Junicode-Italic]     [\s!file:Junicode-Italic]     [\s!features=\s!default]
    \definefontsynonym [Junicode-Bold]       [\s!file:Junicode-Bold]       [\s!features=\s!default]
    \definefontsynonym [Junicode-BoldItalic] [\s!file:Junicode-BoldItalic] [\s!features=\s!default]
\stoptypescript

\starttypescript [\s!serif] [junicode]
    \setups[\s!font:\s!fallback:\s!serif]
    \definefontsynonym [\s!Serif]           [Junicode-Regular]    [\s!features=\s!default]
    \definefontsynonym [\s!SerifItalic]     [Junicode-Italic]     [\s!features=\s!default]
    \definefontsynonym [\s!SerifBold]       [Junicode-Bold]       [\s!features=\s!default]
    \definefontsynonym [\s!SerifBoldItalic] [Junicode-BoldItalic] [\s!features=\s!default]
\stoptypescript

\starttypescript [junicode]
    \definetypeface [junicode] [rm] [\s!serif] [junicode] [\s!default]
    \quittypescriptscanning
\stoptypescript

\stoptypescriptcollection

\endinput
