\newgray{gris1}{.40}
\newgray{gris2}{.85}
\newgray{gris3}{.30}
\newgray{gris4}{.25}
\newgray{gris5}{.90}

\FontTitle{\usefont{T1}{phv}{b}{sl}\fontsize{14.4pt}{12pt}\selectfont}{%
  \usefont{T1}{phv}{b}{sl}\fontsize{14.4pt}{12pt}\selectfont}
