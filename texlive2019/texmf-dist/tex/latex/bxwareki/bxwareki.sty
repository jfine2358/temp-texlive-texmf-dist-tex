  \else\ifnum#1<\bxwy@jk@c
    \bxwy@jkansuji@b0#1%
  \else\ifnum#1<\@m
    \bxwy@jkansuji@b#1%
  \else
    \bxwy@kansuji@a#1\bxwy@mk
  \fi\fi\fi\fi}
