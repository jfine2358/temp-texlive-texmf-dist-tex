}

\cs_new_protected_nopar:Nn\xsb_endxlrbox:n{
  \unskip
  \group_end:\hbox_set_end:
  \sbox\l_xsb_box{\hbox_unpack_clear:N\l_xsb_box}
  \xsb_process_box:nnnN{#1}{\width}{c}\l_xsb_box
  \xsb_endLTR:
  \group_end:
}

\cs_new_protected:Nn\xsb_xlrbox_star:{
