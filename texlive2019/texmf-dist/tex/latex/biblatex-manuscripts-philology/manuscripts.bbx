[2018/09/30 v2.1.0 biblatex bibliography style (MR)]%


\RequireBibliographyStyle{manuscripts-shared}

% Mapping
 \DeclareStyleSourcemap{
	\maps[datatype=bibtex]{
		\map{
			\pertype{manuscript}
				\step[fieldsource=entrykey]
				\step[fieldset=shorthand, origfieldval]
      			}
        		\map[overwrite]{
        			\pertype{manuscript}
				\step[fieldsource=catalog,final]
		 		\step[fieldset=catalog,fieldvalue={\cites}]
				\step[origfieldval,fieldset=catalog,append]
       	 		}
  	}
}
