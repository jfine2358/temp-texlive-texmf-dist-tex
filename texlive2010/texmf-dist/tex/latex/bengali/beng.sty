\DeclareFontSubstitution{U}{bn}{m}{n}

% Define \bn macro:

\DeclareRobustCommand\bn{%
  \usefont{U}{bn}{m}{n}%
  \tolerance=10000\pretolerance=10000
  \emergencystretch=.2\hsize
  \baselineskip1.30\baselineskip }

