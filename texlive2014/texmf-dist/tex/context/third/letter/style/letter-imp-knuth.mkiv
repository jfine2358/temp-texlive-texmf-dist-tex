\useletterstyle[default]

\setupletterstyle
  [\v!firstpage,\v!secondpage]
  [\c!backspace=1in,
   \c!cutspace=1in,
   \c!width=\v!middle]

\setupletterstyle
  [\v!firstpage]
  [\c!header=0pt,
   \c!topspace=2.2in,
   \c!bottomspace=1.5in,
   \c!height=\v!middle]

\setupletterlayer
  [\v!nexthead]
  [\c!alternative=\v!knuth]

\setuplettersection
  [\v!address]
  [\c!alternative=\v!knuth]

\setuplettersection
  [\v!closing]
  [\c!alternative=\v!knuth,
   \c!spaceinbetween=1cm]

\setupletteroptions
  [\c!whitespace=\v!line]

\setupletterelements
  [\v!layer]
  [\v!lettermain,
   \v!letternext,
   \v!nexthead]

\setupletterelements
  [\v!section]
  [\v!address,
   \v!opening,
   \v!content,
   \v!closing]


\endinput
