                  { \tl_use:c { l__exsheets_questions_#1_tl } }
                  { \__exsheets_dummy: }
              }
          }
        % are we using #2?
        \bool_if:cT { g__exsheets_use_#2_bool }
          {
            % is this question an active one?
            \prop_get:cfN { g__exsheets_#2_active_prop }
              { \tl_use:c { l__exsheets_questions_#1_tl } }
              \l__exsheets_tmpa_tl
            \tl_if_eq:NNTF \l__exsheets_tmpa_tl \q_no_value
              {
