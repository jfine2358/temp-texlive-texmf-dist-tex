              { \l__exsheets_tmpb_tl } \l__exsheets_tmpc_tl
            \tl_if_eq:NNT \l__exsheets_tmpc_tl \q_no_value
              { \bool_set_false:N \l__exsheets_solutions_use_bool }
          }
      }
