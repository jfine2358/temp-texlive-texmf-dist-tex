                \bool_set_false:N \l__exsheets_questions_print_bool
              }
              {
                \bool_set_true:c { l__exsheets_#1_active_bool }
                \bool_set_true:N \l__exsheets_use_this_question_bool
              }
          }
      }
    \cs_new_protected:cpn { __exsheets_solutions_use_#2: }
      {
