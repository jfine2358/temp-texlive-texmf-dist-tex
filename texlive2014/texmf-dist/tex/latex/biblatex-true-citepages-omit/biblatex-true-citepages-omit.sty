\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{biblatex-true-citepages-omit}[2014/03/25 v1.0.0 real run of citepages=omit for biblatex]
\RequirePackage{xstring}

\AtEveryCitekey{%
	\usebibmacro{real-citepages-omit}%
}{}{}

\newbibmacro{real-citepages-omit}{%
	\iffieldundef{postnote}{}{%
		\renewcommand{\do}[1]{%
			\global\csletcs{old##1}{##1}%
			\global\csletcs{##1}{relax}%
		}%
		\dolistloop{\realcitepagesomit@cmd}%
		\IfBeginWith{\csfield{postnote}}{\pno}{\clearfield{pages}}{%
		\IfBeginWith{\csfield{postnote}}{\ppno}{\clearfield{pages}}{}}%
		%
		\renewcommand{\do}[1]{%
			\global\csletcs{##1}{old##1}%
		}%
		\dolistloop{\realcitepagesomit@cmd}%
	}%
}%

\def\realcitepagesomit@cmd{}

\newcommand{\realcitepagesomitcmd}[1]{\listadd{\realcitepagesomit@cmd}{#1}}
\realcitepagesomitcmd{emph}
\realcitepagesomitcmd{textbf}



