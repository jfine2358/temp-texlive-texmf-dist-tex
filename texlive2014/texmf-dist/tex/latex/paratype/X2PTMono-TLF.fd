\ProvidesFile{X2PTMono-TLF.fd}
    [2014/02/02 Font definitions for X2/PTMono-TLF.]

\expandafter\ifx\csname PTMono@scale\endcsname\relax
    \let\PTMono@@scale\@empty
\else
    \edef\PTMono@@scale{s*[\csname PTMono@scale\endcsname]}%
\fi
    
\DeclareFontFamily{X2}{PTMono-TLF}{}

\DeclareFontShape{X2}{PTMono-TLF}{m}{n}{
            <->     \PTMono@@scale PTMono-Regular-tlf-x2
}{}

\DeclareFontShape{X2}{PTMono-TLF}{b}{n}{
            <->     \PTMono@@scale PTMono-Bold-tlf-x2
}{}

\DeclareFontShape{X2}{PTMono-TLF}{m}{sl}{
            <->     \PTMono@@scale PTMono-Slanted-tlf-x2
}{}

\DeclareFontShape{X2}{PTMono-TLF}{b}{sl}{
            <->     \PTMono@@scale PTMono-BoldSlanted-tlf-x2
}{}


\DeclareFontShape{X2}{PTMono-TLF}{bx}{n}{<->ssub * PTMono-TLF/b/n}{}
\DeclareFontShape{X2}{PTMono-TLF}{bx}{sl}{<->ssub * PTMono-TLF/b/sl}{}

\endinput
