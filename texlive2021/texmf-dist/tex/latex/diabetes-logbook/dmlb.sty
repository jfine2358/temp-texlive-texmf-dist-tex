            \global\boolfalse{dmlb@readPeriod}%
         }%
         {%
            #1%
         }%
      }%
      {%
         % \IfStrEq{\dmlb@Date\fixme}{\dmlb@iDate}%            100% time
         \pgfcalendarifdate{\dmlb@Date}{at least=\dmlb@iDate}% 137% time
