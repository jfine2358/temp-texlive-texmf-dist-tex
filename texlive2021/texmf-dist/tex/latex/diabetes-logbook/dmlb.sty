\def\writeperiods{%
   \ifnum\tmpb=\tmpa
      \immediate\write\periods{\iY-\iM-\iD}%
      \pgfcalendardatetojulian{\year-\month-\day}{\@potato}
      \pgfcalendarjuliantodate{\@potato}{\iY}{\iM}{\iD}%
      \immediate\write\periods{\iY-\iM-\iD}%
   \else
      \global\advance\tmpb 1\relax
