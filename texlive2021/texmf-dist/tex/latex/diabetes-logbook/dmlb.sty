                        \global\Day 0\relax%
                        \pdfbookmark[1]{\monthn@me}{\dmlb@sDate}%
                     \fi
                  \fi
               \fi
            \fi
         \else% NOT 30, IS IT FEB?
            \ifnum\Month=2
               \ifbool{@leap}% IS LEAP?
               {%
                  \ifnum\Day=29
                     \global\advance\Month 1\relax%
                     \global\Day 0\relax%
                     \pdfbookmark[1]{\monthn@me}{\dmlb@sDate}%
                  \fi
               }%
               {%
