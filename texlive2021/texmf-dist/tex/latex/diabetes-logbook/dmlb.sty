      \pgfcalendardatetojulian{\iY-\iM-\iD+\myd}{\@potato}%
      \pgfcalendarjuliantodate{\@potato}{\iY}{\iM}{\iD}%
      \immediate\write\periods{\iY-\iM-\iD}%
      \writeperiods%
   \fi
}

