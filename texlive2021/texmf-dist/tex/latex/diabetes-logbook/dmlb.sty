\newcommand{\dmlb@checkmedaddy}[1]{%
   \ifbool{dmlb@readPeriod}%
   {%
      \ifbool{dmlb@openDatFile}%
      {%
         % \IfStrEq{\dmlb@Date\fixme}{\dmlb@fDate}%            100% time
