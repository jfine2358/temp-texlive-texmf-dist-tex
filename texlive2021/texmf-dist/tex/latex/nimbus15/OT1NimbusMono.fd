\ProvidesFile{)T1NimbusMono.fd}
    [2016/01/08 Font definitions for OT1/NimbusMono (msharpe).]

\expandafter\ifx\csname NimbusMono@scale\endcsname\relax
    \expandafter\ifx\csname LGCscale\endcsname\relax
        \let\NimbusMono@@scale\@empty
    \else
    	\edef\NimbusMono@@scale{s*[\csname LGCscale\endcsname]}%
	\fi
\else
    \edef\NimbusMono@@scale{s*[\csname NimbusMono@scale\endcsname]}%
\fi

\DeclareFontFamily{OT1}{NimbusMono}{\hyphenchar\font \m@ne}

\DeclareFontShape{OT1}{NimbusMono}{m}{sl}{
      <-> \NimbusMono@@scale zco-Oblique-ot1
}{}

\DeclareFontShape{OT1}{NimbusMono}{m}{n}{
      <-> \NimbusMono@@scale zco-Regular-ot1
}{}

\DeclareFontShape{OT1}{NimbusMono}{m}{it}{
      <-> ssub * NimbusMono/m/sl
}{}
\DeclareFontShape{OT1}{NimbusMono}{l}{sl}{
      <-> \NimbusMono@@scale zco-LightOblique-ot1
}{}

\DeclareFontShape{OT1}{NimbusMono}{l}{n}{
      <-> \NimbusMono@@scale zco-Light-ot1
}{}

\DeclareFontShape{OT1}{NimbusMono}{l}{it}{
      <-> ssub * NimbusMono/l/sl
}{}

\DeclareFontShape{OT1}{NimbusMono}{b}{sl}{
      <-> \NimbusMono@@scale zco-BoldOblique-ot1
}{}

\DeclareFontShape{OT1}{NimbusMono}{b}{n}{
      <-> \NimbusMono@@scale zco-Bold-ot1
}{}

\DeclareFontShape{OT1}{NimbusMono}{b}{it}{
      <-> ssub * NimbusMono/b/sl
}{}

\DeclareFontShape{OT1}{NimbusMono}{bx}{it}{
      <-> ssub * NimbusMono/b/it
}{}

\DeclareFontShape{OT1}{NimbusMono}{bx}{sl}{
      <-> ssub * NimbusMono/b/sl
}{}

\DeclareFontShape{OT1}{NimbusMono}{bx}{n}{
      <-> ssub * NimbusMono/b/n
}{}

\endinput
