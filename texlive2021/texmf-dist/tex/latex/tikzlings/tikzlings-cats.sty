\newcommand*{\cat}[1][]{%
  \begin{scope}%
    \tikzset{/cat/.cd,#1}%
    \ifcat@schroedinger
      \pgfmathparse{int(random(0,1))}
      \let\cat@random=\pgfmathresult
      \ifnum\cat@random=1
        \cat@tombstone%
       \else
         \cat@draw%
      \fi
    \else
      \cat@draw%
    \fi
  \end{scope}%
  \thing[#1]%
  % adding hook for users to customise %%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
  \csname cathookforeground\endcsname
  \csname tikzlinghookforeground\endcsname
}

\newif\ifcat@threeD
\newif\ifcat@schroedinger
\newif\ifcat@back
\newif\ifcat@contour

\tikzset{
