  \fi
  \ifmerriweather@sf
    \ifmerriweather@sflight\def\mdseries@sf{l}\else\def\mdseries@sf{m}\fi
    \ifmerriweather@sfblack\def\bfseries@sf{eb}\else\def\bfseries@sf{b}\fi
  \else
    \def\mdseries@sf{m}\def\bfseries@sf{b}
  \fi



