\ProvidesFile{ot4mlmss.fd}[2021/01/11 v1.0 Font defs for mlmodern]
\DeclareFontFamily{OT4}{mlmss}{}
\DeclareFontShape{OT4}{mlmss}{m}{n}
     {<-8.5> rm-mlmss8
      <8.5-9.5> rm-mlmss9      <9.5-11>  rm-mlmss10
      <11-15.5> rm-mlmss12     <15.5-> rm-mlmss17
      }{}
\DeclareFontShape{OT4}{mlmss}{m}{it}
      {<->ssub*mlmss/m/sl}{}
\DeclareFontShape{OT4}{mlmss}{m}{sl}
     {<-8.5> rm-mlmsso8
      <8.5-9.5> rm-mlmsso9      <9.5-11>  rm-mlmsso10
      <11-15.5> rm-mlmsso12     <15.5-> rm-mlmsso17
      }{}
%%%%%%% Font/shape undefined, therefore substituted
\DeclareFontShape{OT4}{mlmss}{m}{sc}
     {<->sub*mlmr/m/sc}{}
\DeclareFontShape{OT4}{mlmss}{b}{n}
     {<->ssub * mlmss/bx/n}{}
\DeclareFontShape{OT4}{mlmss}{b}{sl}
     {<->ssub * mlmss/bx/sl}{}
\DeclareFontShape{OT4}{mlmss}{b}{it}
     {<->ssub * mlmss/bx/it}{}
%%%%%%%% semibold condensed series
\DeclareFontShape{OT4}{mlmss}{sbc}{n}
     {<-> rm-mlmssdc10}{}
\DeclareFontShape{OT4}{mlmss}{sbc}{sl}
     {<-> rm-mlmssdo10}{}
\DeclareFontShape{OT4}{mlmss}{sbc}{it}
     {<->ssub*mlmss/sbc/sl}{}
%%%%%%%%% bold extended series
\DeclareFontShape{OT4}{mlmss}{bx}{n}
     {<-> rm-mlmssbx10}{}
\DeclareFontShape{OT4}{mlmss}{bx}{sl}
     {<-> rm-mlmssbo10}{}
\DeclareFontShape{OT4}{mlmss}{bx}{it}
     {<->ssub*mlmss/bx/sl}{}
