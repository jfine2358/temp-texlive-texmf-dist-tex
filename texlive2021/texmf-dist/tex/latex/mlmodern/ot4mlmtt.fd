\ProvidesFile{ot4mlmtt.fd}[2021/01/11 v1.0 Font defs for mlmodern]
\DeclareFontFamily{OT4}{mlmtt}{\hyphenchar \font\m@ne}

\ifx\mlmtt@use@light@as@normal\@empty
% macro defined, so we use the light variant as medium (m), and
% medium as semi-bold (sb):
\DeclareFontShape{OT4}{mlmtt}{sb}{n}
     {<-8.5>   rm-mlmtt8     <8.5-9.5> rm-mlmtt9
      <9.5-11> rm-mlmtt10    <11->     rm-mlmtt12
      }{}
\DeclareFontShape{OT4}{mlmtt}{sb}{it}
     {<-> rm-mlmtti10}{}
\DeclareFontShape{OT4}{mlmtt}{sb}{sl}
     {<-> rm-mlmtto10}{}
\DeclareFontShape{OT4}{mlmtt}{sb}{sc}
     {<-> rm-mlmtcsc10}{}
\DeclareFontShape{OT4}{mlmtt}{sb}{scsl}
     {<-> rm-mlmtcso10}{}
%%%%%%%% light (l), light condensed (lc), and dark (b) variants:
\DeclareFontShape{OT4}{mlmtt}{m}{n}
     {<-> rm-mlmtl10}{}
\DeclareFontShape{OT4}{mlmtt}{m}{it}
     {<->sub*mlmtt/l/sl}{}
\DeclareFontShape{OT4}{mlmtt}{m}{sl}
     {<-> rm-mlmtlo10}{}
\DeclareFontShape{OT4}{mlmtt}{c}{n}
     {<-> rm-mlmtlc10}{}
\DeclareFontShape{OT4}{mlmtt}{c}{it}
     {<->sub*mlmtt/lc/sl}{}
\DeclareFontShape{OT4}{mlmtt}{c}{sl}
     {<-> rm-mlmtlco10}{}
\else
% usual setup of variants:
\DeclareFontShape{OT4}{mlmtt}{m}{n}
     {<-8.5>   rm-mlmtt8     <8.5-9.5> rm-mlmtt9
      <9.5-11> rm-mlmtt10    <11->     rm-mlmtt12
      }{}
\DeclareFontShape{OT4}{mlmtt}{m}{it}
     {<-> rm-mlmtti10}{}
\DeclareFontShape{OT4}{mlmtt}{m}{sl}
     {<-> rm-mlmtto10}{}
\DeclareFontShape{OT4}{mlmtt}{m}{sc}
     {<-> rm-mlmtcsc10}{}
\DeclareFontShape{OT4}{mlmtt}{m}{scsl}
     {<-> rm-mlmtcso10}{}
%%%%%%%% light (l), light condensed (lc), and dark (b) variants:
\DeclareFontShape{OT4}{mlmtt}{l}{n}
     {<-> rm-mlmtl10}{}
\DeclareFontShape{OT4}{mlmtt}{l}{it}
     {<->sub*mlmtt/l/sl}{}
\DeclareFontShape{OT4}{mlmtt}{l}{sl}
     {<-> rm-mlmtlo10}{}
\DeclareFontShape{OT4}{mlmtt}{lc}{n}
     {<-> rm-mlmtlc10}{}
\DeclareFontShape{OT4}{mlmtt}{lc}{it}
     {<->sub*mlmtt/lc/sl}{}
\DeclareFontShape{OT4}{mlmtt}{lc}{sl}
     {<-> rm-mlmtlco10}{}
\fi
% bold is always bold (b):
\DeclareFontShape{OT4}{mlmtt}{b}{n}
     {<-> rm-mlmtk10}{}
\DeclareFontShape{OT4}{mlmtt}{b}{it}
     {<->sub*mlmtt/b/sl}{}
\DeclareFontShape{OT4}{mlmtt}{b}{sl}
{<-> rm-mlmtko10}{}
\DeclareFontShape{OT4}{mlmtt}{bx}{it}
     {<->sub*mlmtt/b/sl}{}
\DeclareFontShape{OT4}{mlmtt}{bx}{n}
     {<->ssub*mlmtt/b/n}{}
\DeclareFontShape{OT4}{mlmtt}{bx}{sl}
     {<->ssub*mlmtt/b/sl}{}
\endinput
