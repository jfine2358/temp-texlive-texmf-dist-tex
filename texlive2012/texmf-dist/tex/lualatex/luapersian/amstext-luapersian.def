\ProvidesFile{amstext-luapersian.def}[2011/08/01 v0.1 adaptations for amstext package]
\def\textdef@#1#2#3{%
                    \if@RTL%
                    \hbox dir TRT{{%
                    \everymath{#1}%
                    \let\f@size#2\selectfont
                    #3}}%
                    \else%
                    \hbox{{%
                    \everymath{#1}%
                    \let\f@size#2\selectfont
                    #3}}%
                    \fi%
}
