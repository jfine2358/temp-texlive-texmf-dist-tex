    \protected@edef\@currentlabel{%
      \csname p@footnote\endcsname\@thefnmark}%
    \@makefntext{%
      \rule\z@\footnotesep\ignorespaces\persianfont #1\unskip\strut\par}}}

\long\def\@LTRfootnotetext#1{%
