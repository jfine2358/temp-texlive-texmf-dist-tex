\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{kurier}[2005/10/03 v.1.2 Kurier package (MW)]

\DeclareOption{regular}{\renewcommand{\rmdefault}{kurier}}
\DeclareOption{light}{\renewcommand{\rmdefault}{kurierl}}
\DeclareOption{condensed}{\edef\rmdefault{\rmdefault c}}
\DeclareOption{mathnoalias}{\let\define@kurier@mathversions\relax}
\DeclareOption{math}{\let\define@kurier@mathversions a}
\ExecuteOptions{regular}
\ProcessOptions

\renewcommand{\familydefault}{\rmdefault}
\renewcommand{\bfdefault}{b}
\fontfamily{\familydefault}

\ifx\define@kurier@mathversions\@undefined\else
  \DeclareMathVersion{kurier}
  \DeclareMathVersion{kurierbold}
%   \@ifundefined{T@OT4}{%
%     \input ot4enc.def
%   }{}
%  \bgroup\let\@font@warning\@font@info
  \SetSymbolFont{operators}{kurier}{OT1}{\rmdefault m}{m}{n}
  \SetSymbolFont{letters}{kurier}{OML}{\rmdefault} {m}{it}
  \SetSymbolFont{symbols}{kurier}{OMS}{\rmdefault}{m}{n}
  \SetSymbolFont{largesymbols}{kurier}{OMX}{\rmdefault}{m}{n}
  \SetSymbolFont{operators}{kurierbold}{OT1}{\rmdefault m} {b}{n}
  \SetSymbolFont{letters}  {kurierbold}{OML}{\rmdefault} {b}{it}
  \SetSymbolFont{symbols}  {kurierbold}{OMS}{\rmdefault}{b}{n}
  \SetSymbolFont{largesymbols}{kurierbold}{OMX}{\rmdefault}{b}{n}
%  \egroup
  \SetMathAlphabet{\mathbf}{kurier}{OT1}{\rmdefault}{bx}{n}
  \SetMathAlphabet{\mathsf}{kurier}{OT1}{\rmdefault}{m}{n}
  \SetMathAlphabet{\mathit}{kurier}{OT1}{\rmdefault}{m}{it}
  \SetMathAlphabet{\mathtt}{kurier}{OT1}{\rmdefault}{m}{n}
  \SetMathAlphabet\mathsf{kurierbold}{OT1}{\rmdefault}{bx}{n}
  \SetMathAlphabet\mathit{kurierbold}{OT1}{\rmdefault}{bx}{it}
  \mathversion{kurier}
  \ifx\define@kurier@mathversions a
    \ifx\mv@cmr\@undefined
      \let\mv@cmr\mv@normal
      \let\mv@cmrbold\mv@bold
    \fi
    \let\mv@normal\mv@kurier
    \let\mv@bold\mv@kurierbold
  \fi
  \let\define@kurier@mathversions\@undefined
\fi


