\starttypescriptcollection [anivers]

\starttypescript [\s!sans] [anivers]
    \definefontsynonym [Anivers-Regular] [\s!file:Anivers_Regular]   [\s!features=\s!default]
    \definefontsynonym [Anivers-Italic]  [\s!file:Anivers_Italic]    [\s!features=\s!default]
    \definefontsynonym [Anivers-Bold]    [\s!file:Anivers_Bold]      [\s!features=\s!default]
    \definefontsynonym [Anivers-Caps]    [\s!file:Anivers_SmallCaps] [\s!features=\s!default]
\stoptypescript

\starttypescript [\s!sans] [anivers]
    \setups[\s!font:\s!fallback:\s!sans]
    \definefontsynonym [\s!Sans]       [Anivers-Regular] [\s!features=\s!default]
    \definefontsynonym [\s!SansItalic] [Anivers-Italic]  [\s!features=\s!default]
    \definefontsynonym [\s!SansBold]   [Anivers-Bold]    [\s!features=\s!default]
    \definefontsynonym [\s!SansCaps]   [Anivers-Caps]    [\s!features=\s!default]
\stoptypescript

\starttypescript [anivers]
    \definetypeface [anivers] [ss] [\s!sans] [anivers] [\s!default]
    \quittypescriptscanning
\stoptypescript

\stoptypescriptcollection

\endinput
