      ]
      {AlegreyaSans}
  \newfontfamily\AlegreyaSansBlack
      [ Numbers = {\AlegreyaSans@figurealign,\AlegreyaSans@figurestyle},
        UprightFont    = *-Black ,
        ItalicFont     = *-BlackItalic ,
        BoldFont       = *-Black ,
        BoldItalicFont = *-BlackItalic ,
        UprightFeatures = { SmallCapsFont = AlegreyaSansSC-Black },
