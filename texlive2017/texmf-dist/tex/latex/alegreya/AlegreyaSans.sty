  \let\AlegreyaSansfamily\sfdefault  
  \newfontfamily\AlegreyaSans
      [ Numbers = {\AlegreyaSans@figurealign,\AlegreyaSans@figurestyle},
        UprightFont    = *-\AlegreyaSans@regularstyle ,
