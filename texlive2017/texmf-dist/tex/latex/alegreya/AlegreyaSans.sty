        ItalicFont     = *-\AlegreyaSans@regularstyle Italic ,
        BoldFont       = *-\AlegreyaSans@boldstyle , 
        BoldItalicFont = *-\AlegreyaSans@boldstyle Italic ,
        UprightFeatures = { SmallCapsFont = AlegreyaSansSC-\AlegreyaSans@regularstyle },
