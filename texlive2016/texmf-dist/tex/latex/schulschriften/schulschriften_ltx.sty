\let\theequation=\theequationalt
\let\thetable=\thetablealt
\let\thefigure=\thefigurealt
\let\section=\sectionalt
\let\subsection=\subsectionalt
\let\subsubsection=\subsubsectionalt
\let\paragraph=\paragraphalt
% Theoremlike Environment 
\def\@itemlabel{}
\def\@thmcountersep{.}
\def\@begintheorem##1##2{\trivlist
\item[\hskip\labelsep{\bfseries ##1\ ##2}\hspace{0.5em}]\strut}
\def\@opargbegintheorem##1##2##3{\trivlist
\item[\hskip\labelsep{\bfseries ##1\ ##2}\ ({\bfseries ##3})\hspace{1em}]\strut}
