\usepackage{latexsym}

% Mit den beiden Kommandos 
%     \schreibschrift{<fontbefehl>} 
%         <fontbefehl> = \usefont{T1}{<font>}{<series>}{<shape>} 
%     \normalschrift 
% kann man zwischen der LaTeX-Standard-Formatierung und der
% LaTeX-Anpassung fuer eine Schreibschrift hin- und herschalten.
% Die LaTeX-Anpassung fuer die Schreibschriften  bewirkt:
%     -- Einstellung des Schreibschrift-Fonts, Parameter <fontbefehl>
%     -- Das Kommando \thisfont wird gesetzt. 
%        Es enthaelt stets den aktuell wirksamen <fontbefehl>.
%     -- Schreibschrift in Ueberschriften (sectioning)
%     -- Nummern in Schreibschrift fuer Seitenzahlen, 
%        Gleichungen, Tabellen, Bilder
%     -- In Theoremen etc. wird Fettdruck durch Unterstreichen
%        ersetzt, als einzige Auszeichnungsmoeglichkeit bei einer
%        Schreibschrift.
%
% Allgemein stellt der Stil das Kommando 
%     \deutsch{<buchstaben>} 
%         <buchstaben> = text, der in Suetterlin gesetzt wird,
% bereit, das im Mathematiksatz verwendet werden kann, um Variablen,
% wie einst ueblich, fuer Matrizen und Vektoren und die hyperbololischen
% Funktionen (Sin, Ar Sin, etc.) in S\"utterlinschrift zu schreiben.
%
%------------------------------------------------------------ 
% Suetterlin-Buchstaben im Mathematiksatz
\newcommand{\deutsch}[1]{
\mbox{{\usefont{T1}{wesu}{m}{n}#1\ }}}

% Flattersatz:
\def\Raggedright{%
\rightskip=0pt plus 2em
\spaceskip=.3em
\xspaceskip=.5em}

% Abspeichern und Vorbesetzung:
\let\contentsnamealt=\contentsname
\let\listtablenamealt=\listtablename
\let\listfigurenamealt=\listfigurename
\let\bibnamealt=\bibname
\let\refnamealt=\refname
\let\indexnamealt=\indexname
\let\thepagealt=\thepage
\let\theequationalt=\theequation
\let\thetablealt=\thetable
\let\thefigurealt=\thefigure
\let\sectionalt=\section
\let\subsectionalt=\subsection
\let\subsubsectionalt=\subsubsection
\let\paragraphalt=\paragraph
% Theoremlike Environment 
\def\@itemlabel{}
\def\@thmcountersep{.}
\def\@begintheorem#1#2{\trivlist
\item[\hskip\labelsep{\bfseries #1\ #2}\hspace{0.5em}]\strut}
\def\@opargbegintheorem#1#2#3{\trivlist
\item[\hskip\labelsep{\bfseries #1\ #2}\ ({\bfseries #3})\hspace{1em}]\strut}
\def\@endtheorem{\hspace*{\fill}$\Box$\endtrivlist}

% Schreibschrift:
\newcommand{\schreibschrift}[1]{
#1
\def\thisfont{#1}
\let\contentsnamealt=\contentsname
\let\listtablenamealt=\listtablename
\let\listfigurenamealt=\listfigurename
\let\bibnamealt=\bibname
\let\refnamealt=\refname
\let\indexnamealt=\indexname
\let\thepagealt=\thepage
\let\theequationalt=\theequation
\let\thetablealt=\thetable
\let\thefigurealt=\thefigure
\let\sectionalt=\section
\let\subsectionalt=\subsection
\let\subsubsectionalt=\subsubsection
\let\paragraphalt=\paragraph
% Unterstrichene Verzeichnisnamen:
\renewcommand{\contentsname}{\underline{Inhaltsverzeichnis}}
\renewcommand{\listtablename}{\underline{Tabellenverzeichnis}}
\renewcommand{\listfigurename}{\underline{Bildverzeichnis}}
\renewcommand{\bibname}{\underline{Literatur}}
\renewcommand{\refname}{\underline{Literaturverzeichnis}}
\renewcommand{\indexname}{\underline{Stichwortverzeichnis}}
% Nummern
\def\thepage{{#1\arabic{page}}}
\def\theequation{{#1\arabic{equation}}}
\def\thetable{{#1\arabic{table}}}
\def\thefigure{{#1\arabic{figure}}}
% Ueberschriften
\renewcommand\section{\@startsection {section}{1}{\z@}
{-6mm plus -1mm minus -1mm}{10.5pt plus 0pt minus 0pt}
{#1\Large\Raggedright}}

\renewcommand\subsection{\@startsection{subsection}{2}{\z@}
{-4mm plus -1mm minus -1mm}{2mm plus 0pt minus 0pt}
{#1\Raggedright}}
\renewcommand\subsubsection{\@startsection{subsubsection}{3}{\z@}
{-3mm plus -1mm minus -1mm}{1mm plus 0pt minus 0pt}
{#1\Raggedright}}
\renewcommand\paragraph{\@startsection {paragraph}{4}{\z@}
{2mm plus 1pt minus 1pt}{-1em}
{#1\unskip\ignorespaces}}
% Theoremlike Environment 
\def\@itemlabel{}
\def\@thmcountersep{.}
\def\@begintheorem##1##2{\trivlist
\item[\hskip\labelsep{#1\underline{##1\ ##2}}\hspace{0.5em}]\strut}
\def\@opargbegintheorem##1##2##3{\trivlist
\item[\hskip\labelsep{#1\underline{##1\ ##2}\ (##3)}\hspace{1em}]\strut}
\def\@endtheorem{\hspace*{\fill}$\Box$\endtrivlist}
}% Ende des schreibschrift-Kommandos

